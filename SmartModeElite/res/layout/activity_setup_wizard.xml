<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pagerchild"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDBFF" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dolphin.smartmodeelite.SetupWizardActivity" >
    </android.support.v4.view.ViewPager>

    <ProgressBar
        android:id="@+id/progressBarSetupWizard"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
     <ImageView
        android:id="@+id/setupWizardLeftArrow"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow" />

    <ImageView
        android:id="@+id/setupWizardRightArrow"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/right_arrow" />

</RelativeLayout>